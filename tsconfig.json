{
  "compilerOptions": {
    "target": "ES2015",
    "module": "ES2015",
    "lib": [
      "es2015",
      "dom"
    ],
    "moduleResolution": "node",
    "allowJs": true,
    "checkJs": true,
    "sourceMap": true,
    "outDir": "build",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": false,
    "noImplicitAny": false,
    "isolatedModules": false,
    "strictPropertyInitialization": false,
    "experimentalDecorators": true
  },
  "include": [
    "src"
  ],
  "exclude": [
    "node_modules"
  ]
}